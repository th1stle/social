<header>
  <h1>All Bookings</h1>
  
  <ul class="actions">
    <li><%= link_to "New Booking", new_booking_path, class: "new"  if policy(Booking).new? %></li>
  </ul>
</header>
<p id="notice"><%= notice %></p>

<h1>List Of Booking Requests</h1>

<table>
  <thead>
    <tr>
      <th>Idnumber</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Bookingfor</th>
      <th>Socialclubname</th>
      <th>Socialclublocation</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <div class= "row">
  <div class="col -sm-3 pull-right">
    <div class="sidebar">
        <ul class="nav nav-pills nav-stacked">
        <li class="<%= "active" if current_page?("/bookings")%>"><%= link_to "ALL BOOKINGS", bookings_path%></li>
      </ul>
    </div>
  </div>


  

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.idnumber %></td>
        <td><%= booking.firstname %></td>
        <td><%= booking.lastname %></td>
        <td><%= booking.phone %></td>
        <td><%= time_setup(booking.bookingfor) %> </td>
        <td><%= booking.socialclubname %></td>
        <td><%= booking.socialclublocation %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</div>
  </tbody>
</table>

<br>


