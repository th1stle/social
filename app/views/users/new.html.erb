<h1>Please Fill In Details Below To Register</h1>

<%= simple_form_for :user, url: '/users' do |f| %>

  <%= f.input :idnumber, required: true, placeholder: "Enter Service Number"%>
  <%= f.input :name%>
  <%= f.input :email%>
  <%= f.input :password%>
  <%= f.input :password_confirmation %>
  <%= f.button:submit,class:"btn btn-primary"%>

<% end %>